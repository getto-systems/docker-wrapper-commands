#!/bin/bash
. docker-wrapper.sh
docker_wrapper_server ruby "$@"
if [ "$docker_wrapper_server_cmd" == start ]; then
  docker run \
    -d \
    -u 1000:1000 \
    -w $APP_ROOT \
    $(docker_wrapper_server_name) \
    $(docker_wrapper_volumes) \
    "${docker_wrapper_envs[@]}" \
    $(docker_wrapper_image ruby) \
    bundle exec ruby server.rb \
  ;
fi
