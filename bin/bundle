#!/bin/bash
. docker-wrapper.sh
docker run \
  --rm \
  -u 1000:1000 \
  -w $(pwd) \
  -e BUNDLE_PATH=$APP_ROOT/vendor/bundle \
  $(docker_wrapper_home) \
  $(docker_wrapper_tty) \
  $(docker_wrapper_volumes) \
  "${docker_wrapper_envs[@]}" \
  $(docker_wrapper_image ruby) \
  bundle "${docker_wrapper_args[@]}" \
;
