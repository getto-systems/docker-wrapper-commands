#!/bin/bash
. docker-wrapper.sh
docker_wrapper_docker run \
  --rm \
  -u 1000:1000 \
  -w $(pwd) \
  -e BUNDLE_PATH=$APP_ROOT/vendor/bundle \
  $(docker_wrapper_tty) \
  $(docker_wrapper_volumes) \
  "${docker_wrapper_envs[@]}" \
  $(docker_wrapper_image ruby) \
  $DOCKER_WRAPPER_RBENV_EXEC bundle exec rails "$@" \
;
